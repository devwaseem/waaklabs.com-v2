---
interface Props {
    side: "left" | "right";
}

const { side }: Props = Astro.props;

let classNames = "bg-[#f7f7f7] text-black";
// let classNames = "bg-gray-100 text-black";
if (side === "right") {
    classNames = "bg-blue-600 text-white";
}
---

<div
    class={"inline-block max-w-fit rounded-2xl px-4 py-2 text-sm" +
        " " +
        classNames}>
    <slot />
</div>
