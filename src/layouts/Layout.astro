---
import ChatNavbar from "../components/ChatNavbar.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />

        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="theme-color" content="#FFFFFF" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content="" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
            rel="stylesheet"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.13.1/dist/cdn.min.js"
        ></script>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.13.1/dist/cdn.min.js"
        ></script>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.1/dist/cdn.min.js"
        ></script>
        <link
            href="https://assets.calendly.com/assets/external/widget.css"
            rel="stylesheet"
        />
    </head>
    <body
        x-data=`{
            openChatWidget() {
                drift.api.openChat();
            },
            openCalendlyPopup() {
                Calendly.initPopupWidget({url: 'https://calendly.com/waak/meeting-with-waseem?hide_landing_page_details=1&hide_gdpr_banner=1'});return false;
            }
        }`
        class="bg-white p-6 lg:p-20">
        <ChatNavbar />
        <slot />
    </body>
    <script async src="/js/fslightbox.js"></script>
    <!-- Start of Async Drift Code -->
    <script async>
        "use strict";

        !(function () {
            var t = (window.driftt = window.drift = window.driftt || []);
            if (!t.init) {
                if (t.invoked)
                    return void (
                        window.console &&
